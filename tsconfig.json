{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "commonjs",                     
    "moduleResolution": "node",               
    "baseUrl": "src",                         
    "outDir": "./dist",                         
    "rootDir": "src",                         
    "sourceMap": true,                        
    "noImplicitAny": true,                    
    "esModuleInterop": true,                  
    "strict": true,                           
    "skipLibCheck": true                      
  },
  "include": ["src/**/*"]
}
